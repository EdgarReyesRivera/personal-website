---
// src/pages/projects/index.astro
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';

// Get the 'status' from the URL query.
// This is still useful for filtering the *list* of projects.
const statusFilter = Astro.url.searchParams.get('status');

const allProjects = (await getCollection('projects')).sort((a, b) => {
	const aDate = a.data.pubDate;
	const bDate = b.data.pubDate;

	if (aDate && bDate) {
		// Both projects have a date, sort newest first
		return bDate.valueOf() - aDate.valueOf();
	} else if (aDate && !bDate) {
		// 'a' has a date, 'b' does not. 'a' comes first.
		return -1;
	} else if (!aDate && bDate) {
		// 'b' has a date, 'a' does not. 'b' comes first.
		return 1;
	} else {
		// Neither project has a date, keep their original order.
		return 0;
	}
});

// We no longer filter here on the server.
// Let the client-side script handle showing/hiding.
const filteredProjects = allProjects;

const allStatuses = ['Completed', 'In-Progress', 'Future'];
---

<BaseLayout
    title="Projects | Edgar Reyes-Reyes"
    description="A showcase of technical projects by Edgar Reyes-Rivera."
>
    <section>
        <h1>My Projects</h1>
        <p>
            A collection of my technical projects, from hardware design to
            full-stack software.
        </p>

        <nav class="filter-nav">
            <a href="/projects" class="filter-button">
                All
            </a>
            {
                allStatuses.map((status) => (
                    <a
                        href={`/projects?status=${status}`}
                        class="filter-button"
                    >
                        {status}
                    </a>
                ))
            }
        </nav>
        <ul class="project-grid">
            {
                filteredProjects.map((project) => (
                    <ProjectCard project={project} /> ))
            }
        </ul>
    </section>
</BaseLayout>

<style>
    .filter-nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .filter-button {
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1rem;
        background-color: transparent;
        color: var(--accent-color);
        border: 2px solid var(--accent-color);
        transition: all 0.2s ease-in-out;
        cursor: pointer;
    }

    /* This is the "filled" state for both hover and active */
    .filter-button:hover,
    .filter-button.active {
        background-color: var(--accent-color);
        color: var(--page-background); /* Uses page background for contrast */
        transform: translateY(-2px);
    }

    .project-grid {
        display: grid;
        grid-template-columns: 1fr; /* 1 column on mobile */
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    @media (min-width: 768px) {
        .project-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<script>
    // Get the search parameters from the browser's current URL
    const urlParams = new URLSearchParams(window.location.search);
    const statusFilter = urlParams.get('status');

    // Find all buttons
    const filterButtons = document.querySelectorAll<HTMLAnchorElement>('.filter-button');

    // --- Set the active button state ---
    filterButtons.forEach(button => {
        // Get the 'href' attribute from the button
        const href = button.getAttribute('href');
        
        if (href) {
            // 1. Check the "All" button
            if (href === '/projects') {
                if (!statusFilter) {
                    // If there's no status in the URL, "All" is active
                    button.classList.add('active');
                }
            } 
            
            // 2. Check the other status buttons
            else {
                try {
                    // This line is now safe from the TypeScript error
                    const buttonStatus = new URL(href, window.location.origin).searchParams.get('status');

                    // If the button's status matches the URL's status, it's active
                    if (buttonStatus === statusFilter) {
                        button.classList.add('active');
            
                    }
                } catch (e) {
                    console.error("Could not parse button URL:", e);
                }
            }
        }
    });
</script>