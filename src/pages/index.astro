---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard.astro';

// Get featured projects
const allProjects = await getCollection('projects');
const featuredProjects = allProjects
    .filter(project => project.data.featured)
    .sort((a, b) => {
	const aDate = a.data.pubDate;
	const bDate = b.data.pubDate;

	if (aDate && bDate) {
		// Both projects have a date, sort newest first
		return bDate.valueOf() - aDate.valueOf();
	} else if (aDate && !bDate) {
		// 'a' has a date, 'b' does not. 'a' comes first.
		return -1;
	} else if (!aDate && bDate) {
		// 'b' has a date, 'a' does not. 'b' comes first.
		return 1;
	} else {
		// Neither project has a date, keep their original order.
		return 0;
	}
});
---

<BaseLayout title="Edgar Reyes-Rivera | Computer Engineering & Computer Science" description={SITE_DESCRIPTION}>
    <div class="hero">
        <div class="intro-text">
            <h1>Edgar Reyes-Rivera</h1>
            <p class="tagline">
                Dual Major Computer Engineering & Computer Science Student
            </p>
            <p class="bio">
                I'm passionate about building robust, high-performance systems from the 
                ground up. I thrive on the challenges found at the intersection of 
                hardware and software.
            </p>
        </div>

        <nav class="cta-nav">
            <a href="/projects" class="cta-button">
                View My Work
            </a>
            <a href="/resume" class="cta-button">
                My Resume
            </a>
            <a href="/about" class="cta-button">
                More About Me
            </a>
        </nav>
    </div>

    <section class="featured-work">
        <h2>Featured Work</h2>
        <p>A selection of my recent projects. See all projects <a href="/projects">here</a>.</p>
        <ul class="project-grid">
            {
                featuredProjects.map((project) => (
                    <ProjectCard project={project} />
                ))
            }
        </ul>
    </section>
</BaseLayout>

<style>
    .hero {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 50vh;
        text-align: center;
    }

    .intro-text h1 {
        font-size: 3.5rem;
        margin: 0;
        color: var(--font-color);
    }

    .tagline {
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--accent-color);
        margin: 0.5rem 0 1.5rem 0;
    }

    .bio {
        font-size: 1.15rem;
        max-width: 600px;
        margin: 0 auto 3rem; 
        opacity: 0.9;
    }

    .cta-nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.5rem;
    }

    .cta-button {
        padding: 0.8rem 1.8rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1rem;
        background-color: transparent;
        color: var(--accent-color);
        border: 2px solid var(--accent-color);
        transition: all 0.2s ease-in-out; /* Smooth transition for all properties */
    }
    
    .cta-button:hover {
        background-color: var(--accent-color);
        color: var(--page-background); /* This ensures contrast */
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(var(--shadow-color), 0.25);
    }

    @media (max-width: 720px) {
        .intro-text h1 {
            font-size: 2.5rem;
        }
        .tagline {
            font-size: 1.2rem;
        }
        .featured-work h2 {
            margin-top: 1em;
        }
    }

    .featured-work h2 {
        margin-top: 0.5em;
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    .featured-work p {
        text-align: center;
        font-size: 1.15rem;
        max-width: 600px;
        margin: 0 auto 3rem;
        opacity: 0.9;
    }

    /* Reuse the project grid styles */
    .project-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    @media (min-width: 768px) {
        .project-grid {
            /* This will show 2 columns on desktop */
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>